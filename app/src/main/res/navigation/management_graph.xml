<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/management_graph"
    app:startDestination="@id/project_list">
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.hziee.management.LoginFragment"
        android:label="login"
        tools:layout="@layout/fragment_login"/>
    <fragment
        android:id="@+id/project_list"
        android:name="com.hziee.management.ProjectListFragment"
        android:label="project list"
        tools:layout="@layout/fragment_project_list">
        <action
            android:id="@+id/navigate_to_product_detail"
            app:destination="@id/projectFragment" />

    </fragment>

    <fragment
        android:id="@+id/projectFragment"
        android:name="com.hziee.management.ProjectFragment"
        android:label="ProjectFragment"
        tools:layout="@layout/fragment_project">
        <argument
            android:name="project_id"
            app:argType="integer"/>
        <action
            android:id="@+id/navigate_to_task_list"
            app:destination="@+id/taskListFragment"/>
        <action
            android:id="@+id/navigate_to_time_pick"
            app:destination="@+id/timePickerFragment"/>
        <action
            android:id="@+id/navigate_to_date_pick"
            app:destination="@+id/datePickerFragment"/>
    </fragment>
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.hziee.management.TaskListFragment"
        android:label="fragment_task_list"
        tools:layout="@layout/fragment_task_list" >
        <argument
            android:name="project_id"
            app:argType="integer"/>
        <action
            android:id="@+id/navigate_to_task_detail"
            app:destination="@+id/taskFragment"/>
    </fragment>
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.hziee.management.TaskFragment"
        android:label="TaskFragment"
        tools:layout="@layout/fragment_task">
        <argument
            android:name="task_id"
            app:argType="integer"/>
        <action
            android:id="@+id/navigate_to_time_pick"
            app:destination="@+id/timePickerFragment"/>
        <action
            android:id="@+id/navigate_to_date_pick"
            app:destination="@+id/datePickerFragment"/>
    </fragment>

    <dialog
        android:id="@+id/timePickerFragment"
        android:name="com.hziee.management.TimePickerFragment"
        android:label="time_picker_fragment">
        <argument
            android:name="time"
            app:argType="long"/>
    </dialog>
    <dialog
        android:id="@+id/datePickerFragment"
        android:name="com.hziee.management.DatePickerFragment"
        android:label="date_picker_fragment">
        <argument
            android:name="date"
            app:argType="long"/>
    </dialog>


</navigation>